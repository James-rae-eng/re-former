<h1>user</h1>
<%#The if false and end tags comment out the below block of html%>
<% if false %>
<form accept-charset="UTF-8" action="/users" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
    <label for="email">Email:</label>
    <input type="email" id="email" name="user[email]"><br><br>

    <label for="username">Username:</label>
    <input type="text" id="username" name="user[username]"><br><br>

    <label for="password">Password:</label>
    <input type="password" id="password" name="user[password]"><br><br>

    <input type="submit" value="Submit">
</form> 
<% end %>

<%= form_with model: @user do |form| %>

  <div>
    <%= form.label :email, "Email:"%>
    <%= form.email_field :email, placeholder: "example@email.com" %>
  </div>

  <div>
    <%= form.label :username, "Username:"%>
    <%= form.text_field :username %>
  </div>

  <div>
    <%= form.label :password, "Password:"%>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
